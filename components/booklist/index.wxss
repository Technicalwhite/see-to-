/* Components/booklist/booklist.wxss */
.booklist {
  width: 100%;
  height: 100%;
  display: flex;
}

.bookimg {
  width: 23%;
  height: 100%;
  /* max-width: 184px; */
  margin-right: 2%;
  background: #a04cf7;
  box-shadow: 2px 4px 6px #bbb;
}
.list-right {
  width: 75%;
  position: relative;
  /* background: #604f72; */
}

.book-name {
  height: 44rpx;
  font-size: 30rpx;
  font-weight: 900;
  line-height: 44rpx;
  color: #333;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.p {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;                      
  display: -moz-box;
  white-space: pre-wrap;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.book-popularity {
  height: 56rpx;
  line-height: 56rpx;
}

.book-brief {
  margin: 12rpx 0;
}

.book-di {
  position: absolute;
  bottom: 10rpx;
}

.fen {
  margin: 0 16rpx;
}

.txt {
  color: #e4393c;
}
