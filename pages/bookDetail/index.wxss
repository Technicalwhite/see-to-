/* pages/bookDetail/index.wxss */
@import "../../font/iconfont.wxss";

/* 封面信息 */
.book-box{
  padding-bottom: 150rpx;
}
.book {
  height: 240rpx;
  padding: 0 0 50rpx 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ebebeb;
}

.book .bookcover {
  width: 26%;
  height: 100%;
  box-shadow: 2px 4px 6px #bbb;
}

.detail {
  width: 74%;
  height: 100%;
  padding-left: 30rpx;
  position: relative;
}

.book-name {
  height: 44rpx;
  font-size: 36rpx;
  font-weight: 900;
  line-height: 44rpx;
  color: #333;
}

.book-popularity {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  color: #666;
}

.p {
  overflow: hidden;
  /* line-height: 1.5rem; */
  white-space: pre-wrap;
  word-wrap: break-word;
  text-align: justify;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.update {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: #666;
}

.text {
  position: absolute;
  bottom: 20rpx;
  font-size: 25rpx;
  color: #666;
}

.fen {
  margin: 0 16rpx;
}

/* 封面信息end */

.see {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ebebeb;
  text-align: center;
}

.book-looked {
  width: 33%;
  padding: 30rpx 0;
}

.book-looked view:nth-child(1) {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #999;
}

.j-box {
  padding: 20rpx 20rpx 50rpx 20rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1px solid #ebebeb;
}

.jianjie {
  text-indent: 2em;
  font-size: 30rpx;
  line-height: 50rpx;
}

.zhezhao {
  position: absolute;
  left: 0;
  bottom: -20rpx;
  width: 100%;
  height: 75rpx;
  z-index: 1;
  background: linear-gradient(rgba(0, 0, 0, 0), rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 1));
}

.weizhi {
  position: absolute;
  left: 50%;
  bottom: 0px;
  height: 66rpx;
  z-index: 66;
}

.gao {
  height: none;
}

.yincan {
  height: 240rpx;
}
/* 简介end */
/* 标签 */
.tags{
  display: flex;
  flex-wrap: wrap;
  padding: 0 23rpx;
  font-size: 27rpx;
  color: #666;
  border-bottom: 1px solid #ebebeb;
}
.tags-btn{
  margin: 20rpx ;
  padding: 10rpx 25rpx;
  height: 36rpx;
  line-height: 36rpx;
  border: 1px solid #ebebeb;
  border-radius:36rpx;
}
/* 标签end */
/* 目录 */
.mulu{
  display: flex;
  justify-content: space-between;
  padding: 36rpx 20rpx;
  border-bottom: 1px solid #ebebeb;
}
.mulu view:nth-child(1){
  line-height: 42rpx;
}
.mulu-txt{
display: flex;
}
.mulu-txt view {
  line-height: 42rpx;
   font-size: 25rpx;
 color: #666;
}
.mulu-txt view:nth-child(2){
width: 200rpx;
padding: 0 10rpx;
}
.muli-box{
  padding: 10rpx 30rpx;
}
.muli-box .newzhang{
  line-height: 36rpx;
}
.muli-box .li{
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #666;
}
.wanzhengmulu{
  line-height: 66rpx;
  text-align: center;
}
/* 目录end */
.run{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 123rpx;
  margin: 0 auto;
  line-height: 123rpx;
  text-align: center;
  border-top: 1px solid #ebebeb;
  background-color: #FFF;
}